<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/recipe_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen16">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="@dimen/dimen100"
                android:layout_height="@dimen/dimen100" />

            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_toRightOf="@+id/recipe_image"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Title" />

            <TextView
                android:id="@+id/recipe_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_title"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_toRightOf="@+id/recipe_image"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#888888"
                tools:text="Summary vlababkkbdb jhdsfjkajfdshjf dfdajfka dlkjdslkfjkl dsakl jflkadsjlkfd flkdsjf kldsf" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>